<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoboSort Remote Control"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Disconnected"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Camera Stream Section -->
        <TextView
            android:id="@+id/cameraStreamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Stream"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/statusText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/streamUrlInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="https://xxxx.ngrok-free.app/"
            android:inputType="textUri"
            android:singleLine="true"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/cameraStreamLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoadStream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Load Stream"
            app:layout_constraintTop_toBottomOf="@id/streamUrlInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <WebView
            android:id="@+id/cameraWebView"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/btnLoadStream"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/cameraImageView"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="#000000"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnLoadStream"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/cameraBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cameraWebView,cameraImageView" />

        <!-- Motor Control Section -->
        <TextView
            android:id="@+id/motorControlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motor Control"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cameraBarrier"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Motor Control Buttons -->
        <LinearLayout
            android:id="@+id/motorControlLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/motorControlLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <!-- Forward Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForward"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="â†‘ FORWARD"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Left and Right Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLeft"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="â† LEFT"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRight"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="RIGHT â†’"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Backward Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackward"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="â†“ BACKWARD"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginTop="8dp" />

            <!-- Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="â¬› STOP"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Lifter Control Section -->
        <TextView
            android:id="@+id/lifterControlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifter"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/motorControlLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/lifterControlLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lifterControlLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLifterUp"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="UP"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLifterDown"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="DOWN"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLifterStop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="STOP"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_red_dark" />
        </LinearLayout>

        <!-- BIN Control Section -->
        <TextView
            android:id="@+id/binControlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIN Control (TB6600 Stepper)"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lifterControlLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/binControlLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/binControlLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <!-- BIN HOME Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBinHome"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ  BIN HOME"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:layout_marginBottom="8dp" />

            <!-- BIN 1-2 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBin1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="BIN 1"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBin2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="BIN 2"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- BIN 3-4 Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBin3"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="BIN 3"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBin4"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="BIN 4"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Servo Control Section -->
        <TextView
            android:id="@+id/servoControlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servo Control"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/binControlLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Servo 1 (Arm Base) -->
        <TextView
            android:id="@+id/servo1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARM-ROTATE (S1): 180Â°"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/servoControlLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/armRotateControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo1Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArmRotateFront"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="FRONT"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArmRotateBack"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="BACK"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Servo 2 (Arm Shoulder) -->
        <TextView
            android:id="@+id/servo2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRIP (S2): 110Â°"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/armRotateControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/gripControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo2Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGripOpen"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="OPEN (110)"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGripClose"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="CLOSE (180)"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Servo 3 (Arm Elbow) -->
        <TextView
            android:id="@+id/servo3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRIP-ROTATE (S3): 90Â°"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/gripControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/gripRotateControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo3Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGripRotateMinus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGripRotatePlus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Servo 4 (Gripper) -->
        <TextView
            android:id="@+id/servo4Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARM-EXTEND (S4): 110Â°"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/gripRotateControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/armExtendControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo4Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArmExtendMinus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArmExtendPlus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Servo 5 (LOOK) -->
        <TextView
            android:id="@+id/servo5Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOOK (S5): 90Â°"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/armExtendControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/lookControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo5Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookMinus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookPlus"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="22sp"
                app:cornerRadius="8dp"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Feedback Display -->
        <TextView
            android:id="@+id/feedbackLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot Feedback"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lookControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Waiting for feedback..."
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:minHeight="80dp"
            app:layout_constraintTop_toBottomOf="@id/feedbackLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>