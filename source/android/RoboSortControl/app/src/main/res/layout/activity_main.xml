<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoboSort Remote Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Disconnected"
            android:textSize="13sp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Motor and Lifter Controls (Side by Side) -->
        <LinearLayout
            android:id="@+id/motorLifterRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/statusText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <!-- Motor Control Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnForward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â†‘"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginBottom="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â†"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â¬›"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â†’"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â†“"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    android:minHeight="36dp"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Lifter Control Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lifter"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLifterUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UP"
                    android:textSize="11sp"
                    app:cornerRadius="6dp"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginBottom="3dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLifterDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOWN"
                    android:textSize="11sp"
                    app:cornerRadius="6dp"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginBottom="3dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLifterStop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STOP"
                    android:textSize="11sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:minHeight="36dp"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BIN and Servo Controls (Side by Side) -->
        <LinearLayout
            android:id="@+id/binServoRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/motorLifterRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <!-- BIN Control Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIN"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBinHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ  HOME"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginBottom="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBin1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B1"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBin2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B2"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBin3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B3"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBin4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B4"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Servo Control Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/servo1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARM-ROT: 180Â°"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmRotateFront"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FRONT"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmRotateBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BACK"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/servo2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRIP: 110Â°"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripOpen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OPEN"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripClose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CLOSE"
                        android:textSize="10sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- GRIP-ROTATE and ARM-EXTEND Controls (Side by Side) -->
        <LinearLayout
            android:id="@+id/gripRotateArmExtendRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/binServoRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <!-- GRIP-ROTATE Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/servo3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRIP-ROT: 90Â°"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotateMinus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotatePlus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+"
                        android:textSize="14sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotateDownDiag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="\"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginEnd="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotateUpDiag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="/"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotateVertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="|"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGripRotateHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â€”"
                        android:textSize="12sp"
                        app:cornerRadius="6dp"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginStart="1dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ARM-EXTEND Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/servo4Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARM-EXT: 110Â°"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmExtendMinus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="14sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmExtendPlus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+"
                        android:textSize="14sp"
                        app:cornerRadius="6dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmExtend180"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="180Â°"
                        android:textSize="9sp"
                        app:cornerRadius="6dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginEnd="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmExtend110"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="110Â°"
                        android:textSize="9sp"
                        app:cornerRadius="6dp"
                        android:backgroundTint="@android:color/holo_blue_dark"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArmExtend90"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="90Â°"
                        android:textSize="9sp"
                        app:cornerRadius="6dp"
                        android:backgroundTint="@android:color/holo_orange_dark"
                        android:minHeight="32dp"
                        android:padding="2dp"
                        android:layout_marginStart="1dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Servo 5 (LOOK) -->
        <TextView
            android:id="@+id/servo5Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOOK: 90Â°"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/gripRotateArmExtendRow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/lookControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/servo5Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookMinus10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-10"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                android:minHeight="36dp"
                android:padding="4dp"
                android:layout_marginEnd="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookMinus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-5"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                android:minHeight="36dp"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookPlus5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+5"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                android:minHeight="36dp"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLookPlus10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+10"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                android:minHeight="36dp"
                android:padding="4dp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <!-- Object Detection Section -->
        <TextView
            android:id="@+id/objectDetectionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Detection"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lookControls"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/objectDetectionControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/objectDetectionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp">

            <!-- First Row: Plastic Bottle / Plastic Wrapper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectPlasticBottle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ¾ PLASTIC BOTTLE"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectPlasticWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“¦ WRAPPER"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginStart="2dp" />
            </LinearLayout>

            <!-- Second Row: Paper / Other -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="3dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectPaper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“„ PAPER"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectOther"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â“ OTHER"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:layout_marginStart="2dp" />
            </LinearLayout>

            <!-- Clear Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetectClear"
                android:layout_width="match_parent"
